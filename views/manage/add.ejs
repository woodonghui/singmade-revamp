<div class="normal-wrapper">
	<div class="row">
	  <h1>
	  	<a href="/me/piece">my designs</a> 
	  	/ 
	  	add piece
	  </h1>

	  <% if (typeof err != 'undefined' ){ %>
        <% _.each(err, function(error) { %> 
          <div data-alert class="alert-box alert">
            <%= __(error) %>
          </div>
        <% }) %>
      <% } %>

	  <form action="/me/piece/save" method="post">

	  	<div class="row">
	  	  <div class="large-12 columns">
	  	    <label>title
	  	      <input type="text" name="title" placeholder="title" value="<%= req.body.title || '' %>"/>
	  	    </label>
	  	  </div>
	  	</div>

	  	<div class="row">
	  	  <div class="large-12 columns">
	  	    <label>description
	  	      <textarea name="description" placeholder="description" rows="10"><%= req.body.description || '' %></textarea>
	  	    </label>
	  	  </div>
	  	</div>
    
        <div class="row">
          <div class="large-12 columns">
            <button class="button" type="submit">next, then upload images</button>
          </div>

        </div>

      </form>

	</div>
</div>