<%- partial( '../designer/partials/designer') %>

<div class="normal-wrapper detail-wrapper" ng-controller="PieceViewCtrl" ng-init="init('<%= piece.id %>', '<%= piece.slugId %>')">

	<div class="row">
	  <h1>
	    <%=piece.title %>
	  </h1>

	  <div class="row">
	  	<div class="small-12 medium-7 column images">
	  		<% if (typeof piece.images != 'undefined') { %>
	  		<% _.each(piece.images, function (image) { %>
	  			<% if(image.url) { %>
				<img src="<%= image.url %>" width="100%">
				<% } else { %>
				<!-- display the legacy images -->
				<img src="http://res.cloudinary.com/boutiquesg/image/upload/<%= image.public_id %>.<%= image.format %>" width="100%">
				<% } %>
			<% }) %>
			<% } %>
	  	</div>

	  	<div class="hide-for-small medium-1 column">
	  	</div>

	  	<div class="small-12 medium-4 column">
	  		<p>
	  			<button class="button" busy-button ng-click="like()"><i class="fi-heart"></i> like</button>
	  			<!-- <button class="button"><i class="fi-share"></i> share</button> -->
			</p>
	  		<p class="description"><%- piece.description %></p>

	  		<%- partial('partials/comments') %>

	  	</div>

	  </div>
	  
	</div>
</div>